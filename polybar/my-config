[section/base]
include-file = $HOME/.config/polybar/master.conf
include-file = $HOME/.config/polybar/modules.conf


;=====================================================
;     Openbox Bars
;=====================================================

[bar/openbox-bar]
inherit = bar/master

; forces hide of bar when apps are in fullscreen mode
wm-restack = bspwm

; Use $ xrandr -q | grep " connected" | cut -d ' ' -f1
monitor = ${env:MONITOR:}
monitor-fallback =

modules-left   = workspaces xwindow
modules-center = clock
modules-right  = battery alsa backlight arch-aur-updates wireless-network filesystem temperature memory coreuse


;========= System Tray ==============================

;tray-detached = false
;tray-offset-x = 0
;tray-offset-y = 0
;tray-padding = 0
;tray-margin = 0
;tray-scale = 1.0
;tray-position = right


